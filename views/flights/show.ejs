<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <div class="topnav">
        <a href="../">Home</a>
        <a href="../flights/index">All flights</a>
        <a href="../flights/new">Create flights</a>
      </div>
    <section>
        <table>
            <th class="center" colspan="2">Flight</th>
            <tr>
                <td>Flight: </td>
                <td><%= flight.airline %></td>
            </tr>
            <tr>
                <td>Airport: </td>
                <td><%= flight.airport %></td>
            </tr>
            <tr>
                <td>Flight Number: </td>
                <td><%= flight.flightNo %></td>
            </tr>
            <tr>
                <td>Departure: </td>
                <td><%= flight.departs %></td>
            </tr>
        </table>
        
        <table>
            <th class="center" colspan="2">Destinations</th>
            <% flight.destinations.forEach(f => { %>  
                <tr>
                    <td><%= f.airport %> </td>
                    <td><%= f.arrival %></td>
            <% }); %>
                </tr>
        </table>    

        <table>
            <th class="center" colspan="2">Seats</th>
            <% tickets.forEach(function(t) { %>
                <tr>
                    <td class="smaller">Seat: <%= t.seat %></td>
                    <td>Price: $<%= t.price %></td>
                </tr>
            <% }) %> 
            </table>
      </section>
      <div>
          <button id="tickets"><a href="/flights/<%= flight._id %>/tickets/new">Add Seats</a></button>
      </div>
        
      <br><br><h2>Add a new destination to trip</h2>
       <form id="add-destination-form" method="POST"
         action="/flights/<%= flight._id %>/destinations">
         <label>Airport:</label>
         <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
          </select>
         <label>Arrival Date:</label>
         <input type="datetime-local" name="arrival">
         <input type="submit" value="Add destination">
       </form>
      
</body>
</html>
  